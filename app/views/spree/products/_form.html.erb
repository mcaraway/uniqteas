<div class="name_fields">
	<table style="width: 910px;">
		<tbody>
			<tr>
				<td style="width:245px; text-align: right;padding-right: 10px;font-weight:bold;"> <%= f.label :name %>:
				<br />
				<%= t(:name_lenght)%> </td>
				<td style="width:400px;"> <%= f.text_field :name, :maxlength => 40 %> </td>
				<td style="width:260px;" rowspan="4">
				<div class="image_fields">
					<div class="tea-tin">
						<img src="/assets/TeaTin.png"/>
					</div>
					<div class="tea-tin-image" style="height: 187px;">
						<%= mini_tea_tin_image(@product) %>
					</div>
					<div class="tea-tin-image-fade">
						<img src="/assets/TeaTinLabelFade.png"/>
					</div>
					<div class="tea-tag">
						<img src="/assets/Teabag-and-Teatag.png"/>
					</div>
					<div class="tea-tag-image">
						<%= small_tea_tag_image(@product) %>
					</div>
				</div></td>
			</tr>
			<tr>
				<td style="text-align: right;padding-right: 10px;font-weight:bold;"> <%= f.label :description %>:
				<br />
				<%= t(:description_lenght)%> </td>
				<td> <%= f.text_area :description, :maxlength => 240, :style => "width: 300px;" %> </td>
			</tr>
			<tr>
				<td style="text-align: right;padding-right: 10px;font-weight:bold;"> <%= f.label :options %>: </td>
				<td>
					<%= radio_button "product", "public", "false" %> <%= t(:make_private)%><br />
					<%= radio_button "product", "public", "true" %> <%= t(:make_public)%>
				</td>
			</tr>
			<% if @product.id != nil then %>
			<tr>
				<td></td>
				<td><%= render :partial => 'file_form', :locals => { :f => f } %></td>
			</tr>
			<% end %>
			<tr>
				<td style="text-align: right;vertical-align: bottom;height:40px;"></td>
				<td style="vertical-align: bottom;"> 
				<% if @product.final == false && @edit_blend %>
				<%= f.submit "Save Draft Blend"%> 
				<span style="margin-left: 10px;"><%= button_tag "Finalize for Ordering", :onclick => "submit_final()" %></span> 
				<%= f.hidden_field :final %>
				<script type="text/javascript">
					function submit_final() {
						document.getElementById("product_final").value = true;
						document.forms["edit_product_<%= @product.id %>"].submit();
					}
				</script> 
				<% else %>
				<%= f.submit "Save My Blend"%>
				<% end %> <span style="margin-left: 10px;"><%= link_to t(:cancel), spree.myblends_path %></span></td>
			</tr>
		</tbody>
	</table>
</div>

