<% if @product.has_tin_image? %>
<div style="float:left;width:50%;">
	<div class="small_title" style="float:left;width:100%;">
		Image for tin:
		<br />
		<span style="font-size: 13px;color:red;font-weight: bold">(required size 450px x 600px)</span>
	</div>
	<div id="tin_image" class="field" style="float:left;width:180px;height:194px;background-color:#ccc;border:1px solid #aaa;text-align:center;position:relative;">
		<div style="position: absolute;left:21px;top:4px;">
			<%= small_tea_tin_image(@product) %>
		</div>
		<div class="tea-menu-hidden">
			<%= link_to image_tag("/assets/admin/icons/edit.png", :size=>"20x20", :class=>"tool"), edit_product_image_url(@product, @product.images[0]), :style => "display:inline;", :title => "Change Tin Image" %>
		</div>
	</div>
</div>
<script type="text/javascript">
	$("#tin_image").hover(function() {
		div = $(this).find("div:last").toggleClass("tea-menu", 300);
	}, function() {
		$(this).find("div:last").toggleClass("tea-menu", 300);
	}); 
</script>
<% else %>
<div class="small_title">
	Image for tin:
	<br />
	<span style="font-size: 13px;color:red;font-weight: bold">(required size 450px x 600px)</span>
</div>
<%= f.fields_for "tin_image", :html => { :multipart => true } do |fi| %>
<div class="field" style="float:left;width:100%;">
	<%= fi.file_field :attachment %>
</div>
<% end %>
<% end %>
<style>
	.tea-menu-hidden {
		display: none;
		width: 26px;
		height: 26px;
		text-align: center;
		vertical-align: middle;
	}
	.tea-menu {
		display: inline;
		position: absolute;
		top: 5px;
		right: 5px;
		background-color: #ddd;
		border: 1px solid #aaa;
	}
	.sizeUp {
		width: 24px;
		height: 24px;
	}
</style>
