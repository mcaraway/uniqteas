<div class="tea_cups_div" id="tea_name_percentages">
	<table cellpadding="10" style="min-height: 235px; width: 100%;">
		<tbody>
			<tr>
				<td style="width:245px; text-align: right;padding-right: 10px;font-weight:bold;">Your Blend:</td>
				<td style="width:25%;"> <% flavor_count = 0 %>
				<%= f.fields_for :product_properties do |p| %>
				<%
				if p.object.property_name.index("percent") == nil
				flavor_count += 1
				cid = "flavor" + flavor_count.to_s()
				%>
				<div id="<%= p.object.property_name %>editdiv">
					<%= p.object.value == nil ? "": p.object.value %>
				</div> <%= p.hidden_field :value, :id => cid %>
				<%= p.hidden_field :property_name  %>
				<%
				end
				%>
				<% end %> </td>
				<td style="width:15%;"> <% percent_count = 0 %>
				<%= f.fields_for :product_properties do |p| %>
				<%
				if p.object.property_name.index("percent") != nil
				cclass = "percentInput"
				percent_count += 1
				cid = "percent" + percent_count.to_s()
				disabled = percent_count == 3 ? true : false;
				%>
				<div id="<%= p.object.property_name %>editdiv">
					<%= p.object.value == nil ? "": p.object.value %>
				</div> <%= p.hidden_field :value, :style => "width:45px", :id => cid, :readonly => disabled %>
				<%= p.hidden_field :property_name %>
				<%
				end
				%>
				<% end %> </td>
				<td class="tea-cup-list" style="text-align: left;"> <%= link_to_function t(:edit_blend), 'showEditPanel()' %> </td>
			</tr>
		</tbody>
	</table>
</div>
<script type="text/javascript">
	function showEditPanel() {
		$("#tea_name_percentages").hide();
		$("#tea_selector_div").show();
		updateStuff();
	};
</script>
