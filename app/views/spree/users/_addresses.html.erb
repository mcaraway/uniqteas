<% if try_spree_current_user.addresses.present? %> <h3><%= Spree::Address.model_name.human(:count => 2) %></h3>
<div class="well">
	<table id="user_addresses" class="table">
		<thead>
			<tr>
				<th><%= t(:name)%></th>
				<th><%= Spree::Address.model_name.human %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% try_spree_current_user.addresses.each do |address| %>
			<tr class="<%= cycle('even', 'odd') %>">
				<td><%= address.full_name %></td>
				<td><%= full_address(address) %></td>
				<td> <%= link_to content_tag(:i, '', :class => 'icon-edit') + ' ' +t(:edit), edit_address_path(address) %>&nbsp;
				<%= link_to content_tag(:i, '', :class => 'icon-trash') + ' ' +t(:remove), address_path(address), :method => :delete, :confirm => t(:are_you_sure) %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<% end %>