<% if current_user.addresses.present? %>
<h3><%= Spree::Address.model_name.human(:count => 2) %></h3>
<table id="user_addresses">
  <thead>
    <tr>
    	<th><%= t(:name)%></th>
      <th><%= Spree::Address.model_name.human %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% current_user.addresses.each do |address| %>
    <tr class="<%= cycle('even', 'odd') %>">
    	<td><%= address.full_name %></td>
      <td><%= full_address(address) %></td>
      <td>
        <%= link_to icon('edit') + ' ' +t(:edit), edit_address_path(address) %>&nbsp;
        <%= link_to icon('delete') + ' ' +t(:remove), address_path(address), :method => :delete, :confirm => t(:are_you_sure) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>