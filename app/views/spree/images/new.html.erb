<% content_for :subheader do %> <h1><%= t(:new_image) %></h1>
<% end %>
<%= form_for [@product, @image], :html => { :multipart => true } do |f| %>
<div class="span4">
	<%= t(:thumbnail) %>:
	<%= product_image(@product, :id => "image_thumbnail") %>
</div>
<div class="span6 offset2"><%= render :partial => 'form', :locals => { :f => f } %></div>

<p class="form-buttons" data-hook="buttons">
	<%= button t(:update) %>
	<%= t(:or) %> <%= link_to t(:cancel), edit_product_url(@product), :id => 'cancel_link' %>
</p>
<% end %>
<%= render :partial => 'list'%>
