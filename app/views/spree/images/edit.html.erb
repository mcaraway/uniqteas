<% content_for :subheader do %> <h1><%= t(:edit_image) %></h1>
<% end %>
<%= form_for [@product, @image], :html => { :multipart => true } do |f| %>
<div class="row">
	<div class="span3 margin-top align-center">
		<%= product_image(@product, :id => "image_thumbnail") %>
	</div>
	<div class="span6 offset1 margin-top" >
		<%= render :partial => 'form', :locals => { :f => f } %>
	</div>

	<div class="span16 form-buttons" data-hook="buttons">
		<%= button t(:save) %>
		<%= t(:or) %> <%= link_to t(:cancel), edit_product_url(@product), :id => 'cancel_link' %>
	</div>
</div>
<% end %>
<%= render :partial => 'list'%>