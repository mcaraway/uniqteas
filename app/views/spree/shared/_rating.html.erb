<% stars = @product.get_stars
if !stars.blank? %>
<div class="rating">
	<p><%= t('average_customer_rating') %>: </p>
	<div id="star" data-rating="<%= stars[:star] || 0 %>"></div>
	<p>(<%= t('based_upon') %> <%= stars[:rcount] %> <%= t('reviews') %>)</p>
	<div itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
		<meta itemprop="ratingValue" content="<%= stars[:star] %>" />
		<meta itemprop="reviewCount" content="<%= stars[:rcount] %>" />
	</div>
</div>
<% end %>
