<%
 paginated_products = @searcher.retrieve_products if params.key?(:keywords)
  paginated_products ||= products
%>
<% if products.empty? %>
<%= t(:no_products_found) %>
<% elsif params.key?(:keywords) %>
<h6 class="search-results-title"><%= t(:search_results, :keywords => h(params[:keywords])) %></h6>
<% end %>

<% if products.any? %>
<ul id="products" class="inline product-listing" data-hook>
	<% reset_cycle('default') %>
	<% products.each do |product| %>
	<% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
	<li id="product_<%= product.id %>" class="columns three <%= cycle("alpha", "secondary", "", "omega secondary", :name => "classes") %>", style = "width:212px;height:220px;", data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
		<div class="product-image">
			<% if product.is_custom? %>
			<%= link_to (product) do %>
			<div style="position: relative; width: 190px; height: 200px;">
				<%= render :partial => "/spree/shared/tea_tin_small", :locals => { :product => product } %>
			</div>
			<% end %>
			<% else %>
			<%= link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url' %>
			<% end %>
		</div>
		<%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %>
	</li>
	<% end %>
	<% end %>
	<% reset_cycle("classes") %>
</ul>
<% end %>

<% if paginated_products.respond_to?(:num_pages) %>
<%= paginate paginated_products %>
<% end %>